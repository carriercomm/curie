{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "curie.message.raw",
    "title": "Schema for a raw email message",
    "type": "object",
    "additionalProperties": false,
    "required": ["id", "raw"],
    "properties": {
        "id": {
            "type": "string"
        },
        "raw": {
            "type": "object",
            "additionalProperties": true,
            "properties": {

                "Message-ID": { "type": "string" },
                "From": { "type": "string" },
                "To": { "type": "string" },
                "Date": { "type": "string" },

                "In-Reply-To": { "type": "string" },

                "Cc": { "type": "string" },
                "Bcc": { "type": "string" },

                "References": { "type": "string" },
                "Subject": { "type": "string" },

                "Body": { "type": "string" }
            }
        }
    }
}
