{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "curie.message",
    "title": "Schema for an email message",
    "type": "object",
    "definitions": {
        "email": {
            "type": "string",
            "pattern": "^.+@.+\\..+$"
        },
        "emailAddress": {
            "type": "object",
            "description": "One email address",
            "properties": {
                "email": { "$ref": "#/definitions/email" },
                "name": { "type": "string" }
            },
            "required": ["email"]
        },
        "emailAddresses": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/emailAddress"
            },
            "uniqueItems": true
        }
        "attachment": {
            "type": "object",
            "properties": {
                "filename": { "type": "string" },
                "path": { "type": "string" }
            }
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "received": {
            "type": "string",
            "format": "date-time"
        }
        "labels": {
            "type": "array",
            "minItems": 1
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "fields": {
            "type": "object",
            "from": { "$ref": "#/definitions/emailAddresses" },
            "to": { "$ref": "#/definitions/emailAddresses" },
            "cc": { "$ref": "#/definitions/emailAddresses" },
            "bcc": { "$ref": "#/definitions/emailAddresses" },
            "subject": { "type": "string" },
            "body": {
                "type": "array",
                "items": {
                    "type": "object",
                    "description": "body part (html block, text block)",
                    "properties": {
                        "type": { "type": "string" },
                        "value": { "type": "string" }
                    }
                }
            },
            "attachments": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/attachment"
                }
            }
        },
        "raw": {
            "type": "object",
            "properties": {

                "Message-ID": { "type": "string" },
                "From": { "type": "string" },
                "To": { "type": "string" },

                "In-Reply-To": { "type": "string" },

                "Cc": { "type": "string" },
                "Bcc": { "type": "string" },

                "References": { "type": "string" },
                "Subject": { "type": "string" },

                "Body": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "text": { "type": "string" },
                            "html": { "type": "string" },
                            "attachment": { "type": "string" },
                            "filename": { "type": "string" }
                        }
                    }
                }
            },
            "additionalProperties": true
        }
    },
    "required": ["id", "received", "raw"]
}
