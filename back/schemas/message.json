{
    "title": "Schema for an email message",
    "type": "object",
    "definitions": {
        "email": {
            "type": "string",
            "pattern": "^.+@.+\\..+$"
        },
        "emailAddress": {
            "type": "object",
            "description": "One email address",
            "properties": {
                "email": { "$ref": "#/definitions/email" },
                "name": { "type": "string" }
            },
            "required": ["email"]
        },
        "emailAddresses": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/emailAddress"
            },
            "uniqueItems": true
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "from": { "$ref": "#/definitions/emailAddresses" },
        "to": { "$ref": "#/definitions/emailAddresses" },
        "cc": { "$ref": "#/definitions/emailAddresses" },
        "bcc": { "$ref": "#/definitions/emailAddresses" },

        "raw": {
            "type": "object",
            "properties": {

                "Message-ID": { "type": "string" },
                "From": { "type": "string" },
                "To": { "type": "string" },

                "In-Reply-To": { "type": "string" },

                "Cc": { "type": "string" },
                "Bcc": { "type": "string" },

                "References": { "type": "string" },
                "Subject": { "type": "string" },

                "Body": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "text": { "type": "string" },
                            "html": { "type": "string" },
                            "attachment": { "type": "string" },
                            "filename": { "type": "string" }
                        }
                    }
                }
            },
            "additionalProperties": true
        },

        "received": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": ["id", "received", "raw"]
}
