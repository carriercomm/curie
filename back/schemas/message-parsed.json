{
    "$schema": "http://json-schema.org/draft-04/schema",
    "id": "curie.message.parsed",
    "title": "Schema for a parsed email message",
    "type": "object",
    "definitions": {
        "email": {
            "type": "string",
            "format" : "email"
        },
        "emailAddress": {
            "type": "object",
            "description": "One email address",
            "properties": {
                "email": { "$ref": "#/definitions/email" },
                "name": { "type": "string" }
            },
            "required": ["email"]
        },
        "emailAddresses": {
            "type": "array",
            "minItems": 0,
            "items": {
                "$ref": "#/definitions/emailAddress"
            },
            "uniqueItems": true
        },
        "attachment": {
            "type": "object",
            "properties": {
                "filename": { "type": "string" },
                "file": { "type": "string" }
            }
        }
    },
    "properties": {
        "id": {
            "type": "string"
        },
        "received": {
            "type": "string",
            "format": "date-time"
        },
        "labels": {
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "string"
            },
            "uniqueItems": true
        },
        "fields": {
            "type": "object",
            "from": { "$ref": "#/definitions/emailAddresses" },
            "to": { "$ref": "#/definitions/emailAddresses" },
            "cc": { "$ref": "#/definitions/emailAddresses" },
            "bcc": { "$ref": "#/definitions/emailAddresses" },
            "subject": { "type": "string" },
            "body": {
                "type": "array",
                "items": {
                    "type": "object",
                    "description": "body part (html block, text block)",
                    "properties": {
                        "type": { "type": "string" },
                        "value": { "type": "string" }
                    }
                }
            },
            "attachments": {
                "type": "array",
                "items": {
                    "$ref": "#/definitions/attachment"
                }
            }
        }
    },
    "additionalProperties": false,
    "required": ["id", "received", "fields"]
}

