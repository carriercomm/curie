{{#each packs}}
<li {{#if active }}class="active"{{/if}} data-pack="{{#slugifySelector name }}{{/slugifySelector}}">
    <a href="#{{ hashUrl }}" class="pack">
        <span class="bull" style="color:{{ color }}">&diams;</span>&nbsp;
        {{#shortify name 23 }}{{/shortify}}
        <span class="pull-right counters unread {{#unless unread }}hide{{/unless}}">{{ unread }}</span>
    </a>
    </li>
{{/each}}
