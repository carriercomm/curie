<div class="draftView" >
    <div class="draftBody">
        <form class="form-horizontal">
            <div class="control-group">
                <input name="to" type="text" data-provide="typeahead" placeholder="To">
            </div>
            <div class="control-group">
                <input name="subject" type="text" data-provide="typeahead" placeholder="Subject">
            </div>
            <div class="control-group">
                <textarea rows="6" name="body"></textarea>
            </div>
        </form>
    </div>
    <div class="modal-footer draftFooter">
        <div class="pull-left">
            <span class="muted">Created:</span> {{#dateformat created 'HH:mm, dddd, MMM Do'}}{{/dateformat}}
            {{#if saved }}
            / <span class="muted">Saved:</span> 
            {{#dateformat saved 'HH:mm, dddd, MMM Do'}}{{/dateformat}}
            {{/if}}
        </div>
        <button onClick="javascript:console.info('Sending the message');alert('Ta-da!');" class="btn btn-primary">Send</button>
    </div>
</div>
